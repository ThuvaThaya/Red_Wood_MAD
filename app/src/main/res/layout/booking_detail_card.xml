<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        android:layout_margin="10dp">

        <RelativeLayout
            android:id="@+id/deltaRelativeEdit"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/white">

            <TextView
                android:id="@+id/bookingTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/lobster_two_bold"
                android:text="@string/booking_1"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="RelativeOverlap"
                android:layout_marginStart="20dp" />

            <TextView
                android:id="@+id/paymentTextView"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/tenali_ramakrishna"
                android:gravity="end"
                android:text="@string/paid"
                android:textAlignment="viewEnd"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bookingDescriptionTextView"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_below="@+id/bookingTitleTextView"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/tenali_ramakrishna"
                android:text="@string/booking_description"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <Button
                android:id="@+id/deleteButton"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@+id/bookingTitleTextView"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:background="@android:drawable/ic_menu_delete"
                android:gravity="end"
                app:backgroundTint="@android:color/holo_orange_light" />

            <Button
                android:id="@+id/editButton"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@+id/bookingTitleTextView"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="40dp"
                android:layout_marginRight="10dp"
                android:background="@android:drawable/ic_menu_edit"
                app:backgroundTint="@android:color/holo_orange_light" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>