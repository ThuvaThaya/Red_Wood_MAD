<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg7"
    tools:context=".RegisterActivity">

    <Button
        android:id="@+id/btnback"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="4dp"
        android:background="?attr/homeAsUpIndicator"
        android:onClick="onClickBack"
        app:backgroundTint="@color/white"
        app:strokeColor="#FFC107"
        tools:ignore="OnClick,UsingOnClickInXml" />

    <TextView
        android:id="@+id/us"
        android:layout_width="142dp"
        android:layout_height="193dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="138dp"
        android:text="@string/take_your_first_step_with_us"
        android:textColor="@color/black"
        android:textSize="35dp" />

    <TextView
        android:id="@+id/name"
        android:layout_width="212dp"
        android:layout_height="51dp"
        android:layout_below="@+id/us"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="172dp"
        android:layout_marginRight="172dp"
        android:text="@string/name"
        android:textColor="@color/black"
        android:textSize="20dp" />


    <EditText
        android:id="@+id/regName"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/name"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="-21dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="172dp"
        android:layout_marginBottom="20dp"
        android:background="@color/white"
        android:backgroundTint="#E8E8E8E8"
        android:inputType="text"
        android:textColorHint="@color/black"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/email"
        android:layout_width="212dp"
        android:layout_height="51dp"
        android:layout_below="@+id/regName"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="-10dp"
        android:layout_marginEnd="172dp"
        android:layout_marginRight="172dp"
        android:text="@string/e_mail"
        android:textColor="@color/black"
        android:textSize="20dp" />


    <EditText
        android:id="@+id/regMailBox"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/email"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="-21dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="172dp"
        android:layout_marginBottom="20dp"
        android:background="@color/white"
        android:backgroundTint="#E8E8E8E8"
        android:inputType="text"
        android:textColorHint="@color/black"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/password"
        android:layout_width="212dp"
        android:layout_height="51dp"
        android:layout_below="@+id/regMailBox"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="-10dp"
        android:layout_marginEnd="172dp"
        android:layout_marginRight="172dp"
        android:text="@string/password"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/regPasswordBox"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/password"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="-21dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="172dp"
        android:layout_marginBottom="20dp"
        android:background="@color/white"
        android:backgroundTint="#E8E8E8E8"
        android:inputType="text"
        android:textColorHint="@color/black"
        android:textSize="17dp" />

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="129dp"
        android:layout_height="60dp"
        android:layout_below="@+id/regPasswordBox"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="110dp"
        android:layout_marginLeft="138dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="110dp"
        android:layout_marginRight="127dp"
        android:layout_marginBottom="10sp"
        android:layout_weight="1"
        android:backgroundTint="@color/Yellow"
        android:onClick="onClickLogin"
        android:text="Register"
        android:textColor="@color/white"
        app:cornerRadius="40dp" />


</RelativeLayout>