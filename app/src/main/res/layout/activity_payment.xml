                <!--                    android:backgroundTint="@color/Yellow"-->
                <!--                    android:fontFamily="@font/taviraj_extrabold"-->
                <!--                    android:text="@string/pay"-->
                <!--                    android:textColor="@color/white"-->
                <!--                    app:cornerRadius="20dp" />-->

                <!--                <Button-->
                <!--                    android:id="@+id/btnPay2"-->
