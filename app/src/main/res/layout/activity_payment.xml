    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titlePaymen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/lobster_two_bold"
            android:text="@string/payment"
            android:textColor="@color/black"
            android:textSize="35sp" />


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="15dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="20dp">


                <EditText
                    android:id="@+id/cardNumEditText"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/edit_round"
                    android:hint="@string/card_number"
                    android:inputType="number"
                    android:padding="10dp"
                    android:textColorHint="@color/black" />

                <EditText
                    android:id="@+id/nameOnCardEditText"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/edit_round"
                    android:hint="@string/name_on_card"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textColorHint="@color/black" />

                <EditText
                    android:id="@+id/cardTypeEditText"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/edit_round"
                    android:hint="@string/card_type"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textColorHint="@color/black"
                    android:textSize="17dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/expMonthEditText"
                        android:layout_width="120dp"
                        android:layout_height="50dp"
                        android:layout_gravity="left"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/edit_round"
                        android:hint="@string/creditMonth"
                        android:inputType="number"
                        android:padding="10dp"
                        android:textColorHint="@color/black"
                        android:textSize="17dp" />

                    <EditText
                        android:id="@+id/expYearEditText"
                        android:layout_width="120dp"
                        android:layout_height="50dp"
                        android:layout_gravity="right"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/edit_round"
                        android:hint="@string/creditYear"
                        android:inputType="number"
                        android:padding="10dp"
                        android:textColorHint="@color/black"
                        android:textSize="17dp" />
                </LinearLayout>


                <EditText
                    android:id="@+id/cvcNoEditTxt"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/edit_round"
                    android:hint="@string/cvc_number"
                    android:inputType="number"
                    android:padding="10dp"
                    android:textColorHint="@color/black"
                    android:textSize="17dp" />

                <EditText
                    android:id="@+id/totAmountEditTxt"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/edit_round"
                    android:hint="@string/totamount"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textColorHint="@color/black" />

                <!--                <Button-->
                <!--                    android:id="@+id/btnPay"-->
                <!--                    android:layout_width="124dp"-->
