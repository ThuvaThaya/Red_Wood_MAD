        <TextView
            android:id="@+id/Welcometo"
            android:layout_width="202dp"
            android:layout_height="46dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="215dp"
            android:text="@string/welcome_to"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/redwoods"
            android:layout_width="171dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Welcometo"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="9dp"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="-23dp"
            android:text="@string/red_woods"
            android:textColor="@color/Yellow"
            android:textSize="30dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:layout_below="@+id/redwoods"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="35dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="112dp"
            android:layout_marginEnd="177dp"
            android:layout_marginRight="177dp"
            android:text="@string/e_mail"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/mailbox"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/email"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="37dp"
            android:layout_marginLeft="37dp"
            android:layout_marginTop="-10dp"
            android:layout_marginEnd="23dp"
            android:layout_marginRight="23dp"
            android:layout_marginBottom="20dp"
            android:background="@color/white"
            android:backgroundTint="#E8E8E8E8"
            android:inputType="text"
            android:textColorHint="@color/black"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/password"
            android:layout_width="212dp"
            android:layout_height="51dp"
            android:layout_below="@+id/mailbox"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="35dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="177dp"
            android:layout_marginRight="177dp"
            android:text="@string/password"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/passwordbox"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/password"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="37dp"
            android:layout_marginLeft="37dp"
            android:layout_marginTop="-10dp"
            android:layout_marginEnd="23dp"
            android:layout_marginRight="23dp"
            android:layout_marginBottom="20dp"
            android:background="@color/white"
            android:backgroundTint="#E8E8E8E8"
            android:inputType="text"
            android:textColorHint="@color/black"
            android:textSize="17dp" />

            <Button
            android:id="@+id/btnLogin2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/passwordbox"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="85dp"
            android:layout_marginLeft="73dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10sp"
            android:layout_weight="1"
            android:backgroundTint="@color/Yellow"
            android:onClick="onClickViewRoomOne"
            android:text="Login"
            android:textColor="@color/white"
            app:cornerRadius="40dp" />

        <Button
            android:id="@+id/btnSignin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/passwordbox"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="73dp"
            android:layout_marginRight="73dp"
            android:layout_marginBottom="10sp"
            android:layout_weight="1"
            android:backgroundTint="@color/Yellow"
            android:onClick="onClickRegister"
            android:text="Sign in"
            android:textColor="@color/white"
            app:cornerRadius="40dp" />

    </RelativeLayout>
</ScrollView>