<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login1"
    tools:context=".AddEmployeeActivity">


    <Button
        android:id="@+id/btnback"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="?attr/homeAsUpIndicator"
        app:backgroundTint="@color/black"
        android:onClick="onClickEmployeeDetails"
        android:layout_alignParentLeft="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Employeetitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/lobster_two_bold"
                android:text="@string/add"
                android:textColor="@color/black"
                android:textSize="35dp" />


            <TextView
                android:id="@+id/titleMovieRegister"
                android:layout_width="163dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/lobster_two_bold"
                android:text="@string/employee"
                android:textColor="@color/Yellow"
                android:textSize="35dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="30dp"
                android:padding="15dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="15dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="20dp">


                    <EditText
                        android:id="@+id/chkInDateEditTxt"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/edit_round"
                        android:hint="@string/EmployeeName"
                        android:inputType="text"
                        android:padding="10dp"
                        android:textColorHint="@color/black" />

                    <EditText
                        android:id="@+id/chkInTimeEditTxt"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/edit_round"
                        android:hint="@string/Employeeid"
                        android:inputType="time"
                        android:padding="10dp"
                        android:textColorHint="@color/black" />

                    <EditText
                        android:id="@+id/chkOutDateEditTxt"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/edit_round"
                        android:hint="@string/ContactNumber"
                        android:inputType="date"
                        android:padding="10dp"
                        android:textColorHint="@color/black"
                        android:textSize="17dp" />

                    <EditText
                        android:id="@+id/chkOutTimeEditTxt"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/edit_round"
                        android:hint="@string/gender"
                        android:inputType="time"
                        android:padding="10dp"
                        android:textColorHint="@color/black"
                        android:textSize="17dp" />

                    <EditText
                        android:id="@+id/mobileEditTxt"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/edit_round"
                        android:hint="@string/NICnumber"
                        android:inputType="number"
                        android:padding="10dp"
                        android:textColorHint="@color/black"
                        android:textSize="16dp" />

                    <EditText
                        android:id="@+id/emailEditTxt"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/edit_round"
                        android:hint="@string/bookingEmail"
                        android:inputType="text"
                        android:padding="10dp"
                        android:textColorHint="@color/black"
                        android:textSize="16dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btnCancel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10sp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/Yellow"
                            android:onClick="onClickEmployeeDetails"
                            android:text="@string/btncancel"
                            android:textColor="@color/white"
                            app:cornerRadius="20dp" />

                        <Button
                            android:id="@+id/btnBook"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10sp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/Yellow"
                            android:onClick="onClickEmployeeDetails"
                            android:text="@string/submit"
                            android:textColor="@color/white"
                            app:cornerRadius="20dp" />
                    </LinearLayout>
                </LinearLayout>


            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </ScrollView>

</RelativeLayout>







